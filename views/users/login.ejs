<% layout('layouts/boilerplate') %>


  <div class="container d-flex justify-content-center align-items-center mt-2 mb-2">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
        <div class="card-shadow">
          <img class="card-img-top"
            src="https://images.unsplash.com/photo-1601134917279-ef70a0a90f18?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
            alt="">
          <div class="card-body">
            <h1>Login</h1>
            <form action="/login" method="POST" class="validated-form" novalidate>
              <div class="mb-3 ">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="mb-3 ">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <button class="btn btn-outline-success">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
